@model AppointmentViewModel

@{
    ViewData["Title"] = "Reschedule Appointment";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm rounded">
                <div class="card-header text-dark" style="background-color: #fff3cd;">
                    <h4 class="mb-0">Reschedule Appointment</h4>
                </div>

                <div class="card-body">
                    <form asp-action="Reschedule" method="post">
                        <input type="hidden" asp-for="AppointmentId" />

                        <div class="mb-3">
                            <label asp-for="AppointmentDate" class="form-label fw-semibold">New Appointment Date</label>
                            <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="AppointmentDate" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Purpose" class="form-label fw-semibold">Purpose</label>
                            <textarea asp-for="Purpose" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Purpose" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="VolunteerId" class="form-label fw-semibold">Select Volunteer</label>
                            <select asp-for="VolunteerId" class="form-select">
                                <option value="1">John Doe</option>
                                <option value="2">Sarah Johnson</option>
                                <option value="3">Michael Brown</option>
                            </select>
                            <span asp-validation-for="VolunteerId" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-outline-primary px-4">
                                <i class="bi bi-calendar-check"></i> Confirm Reschedule
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>