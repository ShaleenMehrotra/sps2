@{
    ViewData["Title"] = "Contact Us";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/contact.css" />
}

<div class="page-header">
    <div class="container">
        <h1>Contact Us</h1>
        <p>We're here to help. Reach out to us with your questions or to request support.</p>
    </div>
</div>

<div class="container">
    <div class="contact-container">
        <div class="contact-form">
            <h2>Send Us a Message</h2>
            <p>Fill out the form below and we'll get back to you as soon as possible.</p>

            <form asp-action="SubmitContact" asp-controller="Contact" method="post">
                <div class="form-group">
                    <label for="fullName" class="form-label">Full Name*</label>
                    <input type="text" id="fullName" name="FullName" class="form-control" placeholder="Enter your full name" required>
                </div>

                <div class="form-group">
                    <label for="email" class="form-label">Email Address*</label>
                    <input type="email" id="email" name="Email" class="form-control" placeholder="Enter your email address" required>
                </div>

                <div class="form-group">
                    <label for="phone" class="form-label">Phone Number</label>
                    <input type="tel" id="phone" name="Phone" class="form-control" placeholder="Enter your phone number (optional)">
                </div>

                <div class="form-group">
                    <label for="requestType" class="form-label">Request Type*</label>
                    <select id="requestType" name="RequestType" class="form-control" required>
                        <option value="">Select a request type</option>
                        <option value="General">General Inquiry</option>
                        <option value="Support">Support Request</option>
                        <option value="Appointment">Schedule Appointment</option>
                        <option value="Volunteer">Volunteer Information</option>
                        <option value="Feedback">Feedback</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="subject" class="form-label">Subject*</label>
                    <input type="text" id="subject" name="Subject" class="form-control" placeholder="Enter the subject of your message" required>
                </div>

                <div class="form-group">
                    <label for="message" class="form-label">Message*</label>
                    <textarea id="message" name="Message" class="form-control textarea" placeholder="Enter your message here..." required></textarea>
                </div>

                <div class="form-check">
                    <input type="checkbox" id="consent" name="Consent" class="form-check-input" required>
                    <label for="consent" class="form-check-label">I consent to having this website store my submitted information so they can respond to my inquiry.</label>
                </div>

                <button type="submit" class="submit-button">Submit Message</button>
            </form>
        </div>

        <div class="contact-info">
            <h2>Contact Information</h2>

            <div class="contact-method">
                <h3><i class="bi bi-envelope"></i> Email</h3>
                <p>support@singleparents.org</p>
            </div>

            <div class="contact-method">
                <h3><i class="bi bi-telephone"></i> Phone</h3>
                <p>(123) 456-7890</p>
                <p>Monday-Friday: 9am-5pm</p>
                <p>Saturday: 10am-2pm</p>
            </div>

            <div class="contact-method">
                <h3><i class="bi bi-geo-alt"></i> Address</h3>
                <p>123 Support Street</p>
                <p>City, State 12345</p>
            </div>

            <!-- Add with actual social media -->
            <div class="contact-method">
                <h3><i class="bi bi-share"></i> Social Media</h3>
                <p>Facebook: </p>
                <p>Twitter: </p>
                <p>Instagram: </p>
            </div>
        </div>
    </div>

    <div class="map-container">
        <!-- Replace with actual Google Maps embed code -->
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3024.2219901290355!2d-74.00369368400567!3d40.71312937933185!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25a23e28c1191%3A0x49f75d3281df052a!2s123%20Street%2C%20New%20York%2C%20NY%2010001%2C%20USA!5e0!3m2!1sen!2sus!4v1616603767522!5m2!1sen!2sus" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
    </div>

    <div class="emergency-contact">
        <h2>Need Immediate Help?</h2>
        <p>If you're experiencing a crisis or emergency situation, please call our 24/7 helpline:</p>
        <p><strong>(800) 123-4567</strong></p>
        <p>For life-threatening emergencies, please call 911 or your local emergency number.</p>
    </div>

    <div class="appointment-section">
        <h2>Schedule an Appointment</h2>
        <p>Would you like to speak with one of our advisors? Schedule an appointment for in-person or virtual consultation.</p>
        <a href="/Appointment/Schedule" class="cta-button">Schedule Appointment</a>
    </div>

    <div class="faq-section">
        <h2>Frequently Asked Questions</h2>

        <div class="faq-item">
            <div class="faq-question">How quickly can I expect a response to my inquiry?</div>
            <div class="faq-answer">We strive to respond to all inquiries within 24-48 hours during business days.</div>
        </div>

        <div class="faq-item">
            <div class="faq-question">Is there a cost for your services?</div>
            <div class="faq-answer">Most of our basic services are provided free of charge. Some specialized services may have associated fees, which will be clearly communicated before any commitment.</div>
        </div>

        <div class="faq-item">
            <div class="faq-question">How do I become a volunteer?</div>
            <div class="faq-answer">You can apply to become a volunteer by filling out the volunteer application form on our website or by contacting our volunteer coordinator directly.</div>
        </div>

        <div class="faq-item">
            <div class="faq-question">Are my communications with your organization confidential?</div>
            <div class="faq-answer">Yes, we take confidentiality very seriously. All communications are kept private and secure in accordance with our privacy policy.</div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add Bootstrap Icons if not already included in layout
        if (!document.querySelector('link[href*="bootstrap-icons"]')) {
            const iconLink = document.createElement('link');
            iconLink.rel = 'stylesheet';
            iconLink.href = 'https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css';
            document.head.appendChild(iconLink);
        }

        // FAQ functionality
        document.addEventListener('DOMContentLoaded', function() {
            const faqQuestions = document.querySelectorAll('.faq-question');

            faqQuestions.forEach(question => {
                question.addEventListener('click', function() {
                    // Toggle active class
                    this.classList.toggle('active');

                    // Toggle answer visibility
                    const answer = this.nextElementSibling;
                    answer.classList.toggle('show');
                });
            });
        });
    </script>
}
