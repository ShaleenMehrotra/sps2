@model SingleParentSupport2.Models.UserManagementViewModel

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-4">
    <h1>User Details</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">@Model.FirstName @Model.LastName</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">First Name</dt>
                        <dd class="col-sm-9">@Model.FirstName</dd>

                        <dt class="col-sm-3">Last Name</dt>
                        <dd class="col-sm-9">@Model.LastName</dd>

                        <dt class="col-sm-3">Join Date</dt>
                        <dd class="col-sm-9">@Model.JoinDate.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-3">Roles</dt>
                        <dd class="col-sm-9">
                            @foreach (var role in Model.Roles)
                            {
                                <span class="badge bg-info me-1">@role</span>
                            }
                        </dd>

                        @if (Model.IsVolunteer)
                        {
                            <dt class="col-sm-3">Volunteer Role</dt>
                            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.VolunteerRole) ? "Not specified" : Model.VolunteerRole)</dd>

                            <dt class="col-sm-3">Volunteer Bio</dt>
                            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.VolunteerBio) ? "Not provided" : Model.VolunteerBio)</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="btn-group" role="group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a asp-action="ChangePassword" asp-route-id="@Model.Id" class="btn btn-secondary">
                    <i class="bi bi-key"></i> Change Password
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </a>
                <a asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
