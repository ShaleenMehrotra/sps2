@model SingleParentSupport2.Models.UserManagementViewModel

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-4">
    <h1>Delete User</h1>

    <div class="alert alert-danger">
        <h4><i class="bi bi-exclamation-triangle"></i> Warning</h4>
        <p>Are you sure you want to delete this user? This action cannot be undone.</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">User Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

                <dt class="col-sm-3">Join Date</dt>
                <dd class="col-sm-9">@Model.JoinDate.ToString("MMMM dd, yyyy")</dd>

                <dt class="col-sm-3">Roles</dt>
                <dd class="col-sm-9">
                    @foreach (var role in Model.Roles)
                    {
                        <span class="badge bg-info me-1">@role</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div>
